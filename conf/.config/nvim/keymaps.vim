noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

nnoremap <F2> :set list!<CR>
nnoremap <S-F2> :IndentLinesToggle<CR>
nnoremap <F3> :set hlsearch!<CR>
nnoremap <F4> :set number!<CR>
vnoremap . :normal .<CR>


" Show next matched string at the center of the screen
noremap n nzz
noremap N Nzz

nnoremap <leader>ex :NvimTreeToggle<CR>
